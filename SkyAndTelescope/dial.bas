33 PRINT: H=12-S: G=S*G/60
34 REM
35 REM   CALCULATING LOOP
36 Q=Z5+S*P1*(H-12)/12
37 IF Q<0 THEN 47   
38 IF H<4 OR H>20 THEN 48   
39 IF Q<>0 THEN 41   
40 K=0: GOTO 45   
41 K0=SIN(F1)*TAN(P1/2-Q)
42 K1=COS(F1)*SIN(B1)+K0
43 IF K1=0 THEN K1=1E-10
44 K=COS(B1)/K1
45 GOSUB 52   
46 IF K>=0 THEN GOSUB 57   
47 H=H+G: GOTO 35   
