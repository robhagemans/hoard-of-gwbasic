10 REM     VERTICAL SUNDIALS
11 INPUT "LAT, LONG ";B,L
12 IF B<0 THEN 11   
13 INPUT "TIME-ZONE MERIDIAN";L0
14 INPUT "AZIMUTH DIAL FACES";F
15 IF F<=90 OR F>=270 THEN 14   
