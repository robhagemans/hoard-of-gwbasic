              Buttons AS INTEGER       Number of buttons in virtual window
              LastButton AS INTEGER    Last button selected
              VertPos AS INTEGER       Vertical scroll bar position
              HorzPos AS INTEGER       Horizontal scroll bar position
         END TYPE

